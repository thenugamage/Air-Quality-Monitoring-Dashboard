@page
@model aqm_dashborad.Pages.Admin.ForgotPasswordModel

@section Styles {
    <link rel="stylesheet" href="~/css/ForgotPassword.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/ForgotPassword.js"></script>
}

<div class="main-container">
    <!-- Header Section -->
    <header>
        <div class="nav-container">
            <h1>Forgot Password - Admin Dashboard</h1>
        </div>
    </header>

    <!-- Forgot Password Form Container -->
    <div class="forgot-password-container">
        <h2>Reset Your Password</h2>

        <!-- Forgot Password Form -->
        <form id="forgot-password-form" method="POST" onsubmit="return validateForm()">
            <label for="email">Enter your email address:</label>
            <input type="email" id="email" name="email" placeholder="Enter your registered email" required>

            <input type="submit" value="Send Reset Link">
        </form>

        <!-- Success/Error Message -->
        <div id="error-message" class="message error-message">
            <p>Please enter a valid email address.</p>
        </div>

        <div id="success-message" class="message success-message">
            <p>Password reset link has been sent to your email.</p>
        </div>

        <!-- Back to Login Link -->
        <div class="back-to-login">
            <a href="login.html">Back to Login</a>
        </div>
    </div>


