@page
@model AQI_Colombo.Pages.UserManagementModel

@{
    ViewData["Title"] = "User-Management";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/User-Management.css"> <!-- Link to your CSS file -->
    <title>User Management - Air Quality Monitoring</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
</head>
<body>
    <!-- Menu Toggle Button (visible only on mobile) -->
    <button class="menu-toggle" id="menu-toggle">
        <div class="hamburger-menu">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
    </button>

    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <h2>AQI Colombo</h2>
                <p>Air Quality Dashboard</p>
            </div>
            <ul class="nav-list">
                <li class="nav-item">
                    <a href="~/Admin-Dashboard" class="nav-link">
                        <i class="fas fa-tachometer-alt nav-icon"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Manage-Sensors" class="nav-link">
                        <i class="fas fa-microchip nav-icon"></i>
                        <span>Manage Sensors</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/View-Sensor-Data" class="nav-link">
                        <i class="fas fa-chart-line nav-icon"></i>
                        <span>Sensor Data</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/User-Management" class="nav-link active">
                        <i class="fas fa-users-cog nav-icon"></i>
                        <span>User Management</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-cog nav-icon"></i>
                        <span>Settings</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/login" class="nav-link">
                        <i class="fas fa-sign-out-alt nav-icon"></i>
                        <span>Log Out</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="header">
                <h1>User Management</h1>
                <div class="user-info">
                    <div class="user-avatar">A</div>
                    <span class="user-name">Admin User</span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <button class="btn btn-primary" id="add-user-btn">
                    <i class="fas fa-user-plus"></i>
                    <span>Add New User</span>
                </button>
                <button class="btn btn-outline">
                    <i class="fas fa-file-export"></i>
                    <span>Export User List</span>
                </button>
            </div>

            <!-- Search Box -->
            <div class="search-container">
                <i class="fas fa-search search-icon"></i>
                <input type="text" class="search-input" placeholder="Search by username, email or role...">
            </div>

            <!-- Users Table -->
            <div class="table-container">
                <table class="users-table">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Last Login</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Nuran</td>
                            <td>nuran@gmail.com</td>
                            <td>
                                <span class="role-badge role-admin">Admin</span>
                            </td>
                            <td>
                                <span class="status-indicator status-active"></span>
                                Active
                            </td>
                            <td>25 Apr 2025, 08:15 AM</td>
                            <td>
                                <div class="table-actions">
                                    <button class="action-btn edit-btn">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="action-btn delete-btn">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Sumila</td>
                            <td>sumila@gmail.com</td>
                            <td>
                                <span class="role-badge role-admin">Admin</span>
                            </td>
                            <td>
                                <span class="status-indicator status-active"></span>
                                Active
                            </td>
                            <td>25 Apr 2025, 07:45 AM</td>
                            <td>
                                <div class="table-actions">
                                    <button class="action-btn edit-btn">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="action-btn delete-btn">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Thenuri</td>
                            <td>thenuri@gmail.com</td>
                            <td>
                                <span class="role-badge role-user">User</span>
                            </td>
                            <td>
                                <span class="status-indicator status-active"></span>
                                Active
                            </td>
                            <td>24 Apr 2025, 04:30 PM</td>
                            <td>
                                <div class="table-actions">
                                    <button class="action-btn edit-btn">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="action-btn delete-btn">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="pagination">
                <button class="pagination-btn">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button class="pagination-btn active">1</button>
                <button class="pagination-btn">2</button>
                <button class="pagination-btn">3</button>
                <button class="pagination-btn">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Add/Edit User Modal -->
    <div class="modal" id="user-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add New User</h3>
                <button class="modal-close" id="modal-close">&times;</button>
            </div>
            <div class="modal-body">
                <form id="user-form">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" id="username" class="form-control" placeholder="Enter username" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" class="form-control" placeholder="Enter email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" class="form-control" placeholder="Enter password" required>
                    </div>
                    <div class="form-group">
                        <label for="role">Role</label>
                        <select id="role" class="form-select" required>
                            <option value="">Select Role</option>
                            <option value="admin">Admin</option>
                            <option value="user">User</option>
                            <option value="viewer">Viewer</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="status">Status</label>
                        <select id="status" class="form-select" required>
                            <option value="">Select Status</option>
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline" id="cancel-btn">Cancel</button>
                <button class="btn btn-primary" id="save-user-btn">Save User</button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <div class="footer-links">
            <a href="#" class="footer-link">About the Project</a>
            <a href="#" class="footer-link">Privacy Policy</a>
            <a href="#" class="footer-link">Contact Us</a>
        </div>
        <div class="copyright">
            © 2025 Real-time Air Quality Monitoring Project
        </div>
    </div>

    <script src="~/js/User-Management.js"></script> <!-- Link to your JavaScript file -->
</body> 
</html>
        