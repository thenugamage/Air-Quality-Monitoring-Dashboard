@page
@model AQI_Colombo.Pages.ViewSensorDataModel

@{
    ViewData["Title"] = "View-Sensor-Data";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/View-Sensor-Data.css"> <!-- Link to your CSS file -->
    <title>View Sensor Data - Air Quality Monitoring</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  
</head>
<body>
    <!-- Menu Toggle Button (visible only on mobile) -->
    <button class="menu-toggle" id="menu-toggle">
        <div class="hamburger-menu">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
    </button>

    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <h2>AQI Colombo</h2>
                <p>Air Quality Dashboard</p>
            </div>
            <ul class="nav-list">
                <li class="nav-item">
                    <a href="~/Admin-Dashboard" class="nav-link">
                        <i class="fas fa-tachometer-alt nav-icon"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Manage-Sensors" class="nav-link">
                        <i class="fas fa-microchip nav-icon"></i>
                        <span>Manage Sensors</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/View-Sensor-Data" class="nav-link active">
                        <i class="fas fa-chart-line nav-icon"></i>
                        <span>Sensor Data</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/User-Management" class="nav-link">
                        <i class="fas fa-users-cog nav-icon"></i>
                        <span>User Management</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-cog nav-icon"></i>
                        <span>Settings</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/login" class="nav-link">
                        <i class="fas fa-sign-out-alt nav-icon"></i>
                        <span>Log Out</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="header">
                <h1>View Sensor Data</h1>
                <div class="user-info">
                    <div class="user-avatar">A</div>
                    <span class="user-name">Admin User</span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <button class="btn btn-primary">
                    <i class="fas fa-file-export"></i>
                    <span>Export Data</span>
                </button>
                <button class="btn btn-outline">
                    <i class="fas fa-sync-alt"></i>
                    <span>Refresh Data</span>
                </button>
                <button class="btn btn-outline">
                    <i class="fas fa-chart-bar"></i>
                    <span>View Analytics</span>
                </button>
            </div>

            <!-- Filter Section -->
            <div class="filter-section">
                <div class="filter-group">
                    <label for="date-range" class="filter-label">Date Range</label>
                    <select id="date-range" class="filter-control">
                        <option value="today">Today</option>
                        <option value="yesterday">Yesterday</option>
                        <option value="last-7-days" selected>Last 7 Days</option>
                        <option value="last-30-days">Last 30 Days</option>
                        <option value="custom">Custom Range</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="location" class="filter-label">Location</label>
                    <select id="location" class="filter-control">
                        <option value="all">All Locations</option>
                        <option value="fort">Fort</option>
                        <option value="galle-face">Galle Face</option>
                        <option value="colpetty">Colpetty</option>
                        <option value="nugegoda">Nugegoda</option>
                        <option value="east-side">East Side</option>
                        <option value="city-center">City Center</option>
                        <option value="downtown">Downtown</option>
                        <option value="west-side">West Side</option>
                        <option value="industrial-area">Industrial Area</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="parameter" class="filter-label">Parameter</label>
                    <select id="parameter" class="filter-control">
                        <option value="all">All Parameters</option>
                        <option value="aqi">AQI</option>
                        <option value="pm25">PM2.5</option>
                        <option value="pm10">PM10</option>
                        <option value="no2">NO2</option>
                        <option value="so2">SO2</option>
                        <option value="co">CO</option>
                        <option value="o3">Ozone</option>
                    </select>
                </div>
                <button class="filter-btn">Apply Filters</button>
            </div>

            <!-- Sensor Data Table -->
            <div class="table-container">
                <table class="sensor-data-table">
                    <thead>
                        <tr>
                            <th>Sensor ID</th>
                            <th>Location</th>
                            <th>Date/Time</th>
                            <th>AQI</th>
                            <th>PM2.5</th>
                            <th>PM10</th>
                            <th>NO2</th>
                            <th>SO2</th>
                            <th>CO</th>
                            <th>Ozone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>S001</td>
                            <td>Fort</td>
                            <td>25 Apr 2025, 08:15 AM</td>
                            <td><span class="aqi-indicator aqi-moderate">78</span></td>
                            <td>25 µg/m³</td>
                            <td>35 µg/m³</td>
                            <td>15 ppb</td>
                            <td>10 ppb</td>
                            <td>0.8 ppm</td>
                            <td>0.03 ppm</td>
                            <td>
                                <div class="table-actions">
                                    <button class="action-btn view-btn">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="action-btn download-btn">
                                        <i class="fas fa-download"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>S002</td>
                            <td>Galle Face</td>
                            <td>25 Apr 2025, 08:20 AM</td>
                            <td><span class="aqi-indicator aqi-moderate">82</span></td>
                            <td>30 µg/m³</td>
                            <td>40 µg/m³</td>
                            <td>20 ppb</td>
                            <td>12 ppb</td>
                            <td>1.0 ppm</td>
                            <td>0.04 ppm</td>
                            <td>
                                <div class="table-actions">
                                    <button class="action-btn view-btn">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="action-btn download-btn">
                                        <i class="fas fa-download"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>S003</td>
                            <td>City Center</td>
                            <td>25 Apr 2025, 08:17 AM</td>
                            <td><span class="aqi-indicator aqi-unhealthy">106</span></td>
                            <td>38 µg/m³</td>
                            <td>58 µg/m³</td>
                            <td>27 ppb</td>
                            <td>15 ppb</td>
                            <td>1.2 ppm</td>
                            <td>0.06 ppm</td>
                            <td>
                                <div class="table-actions">
                                    <button class="action-btn view-btn">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="action-btn download-btn">
                                        <i class="fas fa-download"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>S004</td>
                            <td>Industrial Area</td>
                            <td>25 Apr 2025, 08:10 AM</td>
                            <td><span class="aqi-indicator aqi-very-unhealthy">185</span></td>
                            <td>65 µg/m³</td>
                            <td>110 µg/m³</td>
                            <td>42 ppb</td>
                            <td>35 ppb</td>
                            <td>2.5 ppm</td>
                            <td>0.08 ppm</td>
                            <td>
                                <div class="table-actions">
                                    <button class="action-btn view-btn">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="action-btn download-btn">
                                        <i class="fas fa-download"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>S005</td>
                            <td>Colpetty</td>
                            <td>25 Apr 2025, 08:25 AM</td>
                            <td><span class="aqi-indicator aqi-good">45</span></td>
                            <td>12 µg/m³</td>
                            <td>20 µg/m³</td>
                            <td>8 ppb</td>
                            <td>5 ppb</td>
                            <td>0.4 ppm</td>
                            <td>0.02 ppm</td>
                            <td>
                                <div class="table-actions">
                                    <button class="action-btn view-btn">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="action-btn download-btn">
                                        <i class="fas fa-download"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="pagination">
                <button class="pagination-btn">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button class="pagination-btn active">1</button>
                <button class="pagination-btn">2</button>
                <button class="pagination-btn">3</button>
                <button class="pagination-btn">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <div class="footer-links">
            <a href="#" class="footer-link">About the Project</a>
            <a href="#" class="footer-link">Privacy Policy</a>
            <a href="#" class="footer-link">Contact Us</a>
        </div>
        <div class="copyright">
            © 2025 Real-time Air Quality Monitoring Project
        </div>
    </div>
>
    <script src="~/js/View-Sensor-Data.js"></script> <!-- Link to your JavaScript file -->
</body>
</html>